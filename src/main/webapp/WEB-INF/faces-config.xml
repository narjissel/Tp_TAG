<?xml version="1.0" encoding="UTF-8"?>
<!-- ce fichier de configuration JSF spécifie un resolveur EL fourni par Spring à utiliser dans
	le contexte de l'application JSF. Cela permet d'intégrer les beans gérés par Spring dans
 	les expressions EL utilisées dans les pages JSF, permettant une interaction transparente entre
 	les composants Spring et JSF. -->

<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    
    <application>
		<el-resolver>
			org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>
	</application>

</faces-config>
